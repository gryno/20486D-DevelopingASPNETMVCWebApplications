@model AzureStorageDemo.Models.Photo

@{
    ViewData["Title"] = "CreateImage";
}

<div class="add-image">
    <h1 class="into">Add Photo to Album</h1>
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" enctype="multipart/form-data" asp-action="CreateImage">
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="Title" type="text" class="form-control" placeholder="Photo Title" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="Description" type="text" class="form-control" placeholder="Photo Description" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PhotoAvatar" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-6">
                        <input asp-for="PhotoAvatar" type="file" class="form-control" placeholder="file" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-outline-primary">
                            Submit Photo to Azure
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}